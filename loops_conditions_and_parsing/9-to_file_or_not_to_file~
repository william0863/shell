#!/usr/bin/env bash
# This script will give information about "school" file. Using if and else.
# The script will check if the file exists and print it.

x="school"

if [ -e $x ]
then  echo "school file exists"

elif [ ! -e $x ]
then echo "school file does not exist"

elif [ ! -s $x ]
then echo "school file is empty"

elif [ -s $x ]
then echo "school file is not empty"

elif [ -f $x ]
then echo "school is a regular file"

else [ not -f $x ] :
fi
